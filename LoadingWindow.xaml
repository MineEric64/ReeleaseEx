<Window x:Class="ReeleaseEx.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReeleaseEx"
        mc:Ignorable="d"
        Title="Loading..." Height="140" Width="717">
    <Grid>
        <ProgressBar x:Name="loadingBar" HorizontalAlignment="Left" Height="34" Margin="22,18,0,0" VerticalAlignment="Top" Width="668"/>
        <Label x:Name="loadingText" Content="Loading..." HorizontalAlignment="Left" Margin="308,62,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="loadingPercentage" HorizontalAlignment="Left" Margin="341,27,0,0" TextWrapping="Wrap" Text="100%" VerticalAlignment="Top"/>

    </Grid>
</Window>
